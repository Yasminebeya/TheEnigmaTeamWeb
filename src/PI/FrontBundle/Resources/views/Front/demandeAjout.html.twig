{% block body %}

    <div class="container">

        <div class="container">


                        <div class="col-md-7">

                            <!-- About
                            ================================================= -->
                            <div class="about-profile">
                                <div class="about-content-block">
                                    <h4><i class="ion-ios-information-outline icon-in-title"></i>Votre ajout a été effectué par succés  </h4>
                                    <h5 class="grey">Espérons que le nombre des participants atteint sa limite </h5>
                                    <h5 class="grey">Merci </h5>
                                </div>
                                <div class="about-content-block">
                                    <h4 class="grey"><i class="ion-ios-briefcase-outline icon-in-title"></i>Mes evènements </h4>

                                </div>



                                {% for eve in evenements %}
                                    <div class="media">


                                        <div class="grid-item col-md-6 col-sm-6">
