{% extends "@PIFront/Front/index.html.twig" %}

{% block body %}



    <div id="page-contents">
    <div class="container">
    <div class="row">

    <div class="col-md-7">

        <!-- Post Create Box
        ================================================= -->
        <div class="create-post">
            <div class="row">
                <div class="col-md-7 col-sm-7">



                    <div class="form-group">
                        <h1>Liste des évènements</h1>
                    </div>
                </div>
                <div class="col-md-5 col-sm-5">
                    <div class="tools">

                    </div>
                </div>
            </div>
        </div><!-- Post Create Box End -->

        <!-- Media
        ================================================= -->
        {% for eve in evenements %}
            <div class="media">


                <div class="grid-item col-md-6 col-sm-6">
                    <div class="media-grid">

                        <div class="img-wrapper" data-toggle="modal" data-target=".modal-9">
                       {#    <img name="{{ eve.id }}" src="{{ asset('')}}{{ vich_uploader_asset(eve,'imageFile') }}.jpg"  class="img-responsive post-image">
#}
                        </div>
                        <div class="media-info">
                            <div class="reaction">
                                <a class="btn text-green"> {{ eve.datedebut|date('m/d/Y') }}</a>
                                <a class="btn text-red"> {{ eve.datefin|date('m/d/Y') }}</a>
                            </div>
                            <div class="user-info">

                                <div class="user">
                                    <h6><a class="profile-link">{{ eve.categorie }}</a></h6>
                                    <a class="text-green" >{{ eve.nom }}</a>
                                </div>
                            </div>
                            <div class="line-divider"></div>
                            <div class="user-info">
                                <div>
                                    <td><a class="btn btn-primary btn-lg" href="{{ path('pi_front_infoEve',{'id':eve.id})}}">Consulter</a></td>
                                </div>
                            </div>

                        </div>
                        <!--Popup-->

                    </div>


                </div>
            </div>
        {% endfor %}



    </div>
        <!-- Newsfeed Common Side Bar Right
================================================= -->
        <div class="col-md-2 static">
            <div class="suggestions" id="sticky-sidebar">
                <h4 class="grey">Rechercher un évènement</h4>


                    {{ form_start(form) }}


                    {{ form_end(form) }}

            </div>
        </div>

    </div>
    </div>
    </div>



{% endblock %}