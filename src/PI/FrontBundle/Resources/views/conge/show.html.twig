{% extends 'PIFrontBundle:Front:index.html.twig' %}

{% block body %}
    <h1>Information sur le congé</h1>
<div class="form-group">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <div class="panel-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id : </th>
                <td>{{ conge.id }}</td>
            </tr>

            <tr>
                <th>Datedebut :</th>
                <td>{% if conge.datedebut %}{{ conge.datedebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Nbrjours :</th>
                <td>{{ conge.nbrjours }}</td>
            </tr>
            <tr>
                <th>Raison :</th>
                <td>{{ conge.raison }}</td>
            </tr>
            <tr>
                <th>Typeconge :</th>
                <td>{{ conge.TypeConge }}</td>
            </tr>
            <tr>
                <th>Etat:</th>
                <td>{{ conge.etat }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('conge_index') }}">Afficher la liste des congés</a>
        </li>
        <li>
            <a href="{{ path('conge_edit', { 'id': conge.id }) }}">Edit</a>
        </li>

            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}

    </ul>
                    </div>
                </section>
            </div>
        </div>

    </div>
{% endblock %}
