{% extends "@PIFront/Back/indexBack.html.twig" %}

{% block body %}

    <div class="form-group">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <div>
                        <class>
                            <h1 class="first-city">Les évènements passés </h1>
                        </class>
                    </div>

                </header>
                    <div class="panel-body">


                        <table class="table table-striped">
                            <thead>
                            <tr>

                                <th>Catégorie</th>
                                <th>Date début</th>
                                <th> Pourcentage des participants </th>


                            </tr>
                            </thead>
                            <tbody>
                            {% for eve in evenements %}
                            <tr>

                                <td>{{ eve.categorie}}</td>
                                <td>{{ eve.datedebut|date("d/m/Y") }}</td>
                                <td>{{ eve.pourcentage }}</td>

                                <td><a class="btn btn-info" href="{{ path('pi_back_infoEve',{'id':eve.id})}}">Consulter</a></td>


                            </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </section>

            </div>
        </div>
    </div>
    </form>



{% endblock %}