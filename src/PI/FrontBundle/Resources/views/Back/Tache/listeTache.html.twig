{% extends "@PIFront/Back/indexBack.html.twig" %}

{% block body %}
    <div>
        <class>
        <h1 class="first-city">Liste des Tâches afféctés </h1>
        </class>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">

                    <div class="panel-body">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Date début</th>
                                <th>Date fin</th>
                                <th>Description</th>
                                <th>Employé</th>

                                <th></th>


                            </tr>
                            </thead>
                            <tbody>
                            {% for tache in tache %}
                            <tr>

                                <td>{{ tache.datedebut|date("d/m/Y")}}</td>
                                <td>{{ tache.datefin|date("d/m/Y") }}</td>
                                <td>{{ tache.description }}</td>
                                <td>{{ tache.user }}</td>

                                <td> <a href="{{ path('pi_back_update_taches',{'id': tache.id}) }}" class="btn btn-round btn-info ">Mettre à jour</a></td>
                                <td><a class="btn btn-round btn-danger" href="{{ path('pi_back_supprimer_taches',{'id': tache.id}) }}">Supprimer</a></td>

                            </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <div class="col-xs-6" style="text-align-last: end">
                            <div class="navigation" >
                                {{ knp_pagination_render(tache) }}
                            </div>
                        </div>


                    </div>
                </section>
            </div>
        </div>
    </div>
    </form>

{% endblock %}