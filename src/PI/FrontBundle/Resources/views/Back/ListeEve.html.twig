{% extends "@PIFront/Back/indexBack.html.twig" %}

{% block body %}

    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        <div>
                            <class>
                                <h1 class="first-city">Les évènements à vénir</h1>
                            </class>
                        </div>

                    </header>

                    <div class="panel-body">
                        <table class="table table-striped">
                            <thead>
                            <tr>

                                <th>Catégorie</th>
                                <th>Nom évènement</th>
                                <th>Date début</th>
                                <th>Date fin</th>

                            </tr>
                            </thead>

                            <tbody>
                            {% for eve in evenements %}
                            <tr>
                                <td>{{ eve.categorie}}</td>
                                <td>{{ eve.nom }}</td>
                                <td>{{ eve.datedebut|date("Y/m/d") }}</td>
                                <td>{{ eve.datefin|date("Y/m/d") }}</td>

                                <td><a class="btn btn-info " href="{{ path('pi_back_infoEve',{'id':eve.id})}}">Consulter</a></td>
                            </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <td><a class="btn btn-primary btn-lg" href="{{ path('pi_back_events') }}">les évènements les plus participés</a></td>
                        <td><a class="btn btn-default btn-lg " href="{{ path('pi_back_searchEvent') }}">Rechercher un évènement</a></td>

                    </div>
                </section>
            </div>
        </div>

    </div>
    </form>



{% endblock %}
